extends ../layout
block head
  link(rel='stylesheet', href='/styles/sign_in.css')
block content
  #content.ui.middle.aligned.center.aligned.grid
    .column
      h2.ui.teal.header DOerBox
      .ui.large.form
        .ui.stacked.segment
          .field
            .ui.left.icon.input
              i.user.icon
              input(type='text',name='email',placeholder='邮箱')
          .field
            .ui.left.icon.input
              i.lock.icon
              input(type='password',name='password',placeholder='密码')
          .field
            .ui.left.icon.input
              i.lock.icon
              input(type='password',name='re_password',placeholder='确认密码')
          .ui.fluid.large.teal.submit.button.sign_up 注册
        .ui.error.message
      .ui.message 已有账号？
        a(href="/") 登录
block foot
  script(src='/jquery-md5/jquery.md5.js')
  script(src='/scripts/sign_up.pack.js')
